{
  "name": "@oer-search-index/frontend",
  "version": "0.4.0-SNAPSHOT",
  "private": true,
  "jest": {
    "coveragePathIgnorePatterns": [
      "src/index.js",
      "src/serviceWorker.js",
      "src/i18n.js",
      "src/config/prod.js,",
      "src/components/resultComponent/ResultComponent.js",
      "src/components/searchComponent/SearchComponent.js",
      "src/light-bootstrap-dashboard.css"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(antd|rc-pagination|rc-picker)/)"
    ],
    "watchPathIgnorePatterns": [
      ""
    ]
  },
  "dependencies": {
    "@appbaseio/reactivesearch": "^3.13.3",
    "@babel/runtime": "^7.10.4",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "bootstrap": "^4.5.0",
    "env-cmd": "^10.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "i18next": "^19.8.4",
    "i18next-browser-languagedetector": "^4.3.1",
    "i18next-chained-backend": "^2.0.1",
    "i18next-http-backend": "^1.0.21",
    "i18next-localstorage-backend": "^3.1.2",
    "moment": "^2.24.0",
    "react": "^16.13.1",
    "react-bootstrap": "^1.1.1",
    "react-cookie": "^4.0.3",
    "react-device-detect": "^1.13.1",
    "react-dom": "^16.13.1",
    "react-global-configuration": "^1.4.0",
    "react-scripts": "^3.4.3",
    "react-toastify": "^5.5.0",
    "react-window": "^1.8.5",
    "reactstrap": "^8.5.1"
  },
  "scripts": {
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "test:coverage": " npm test -- --coverage --watchAll=false",
    "test:coverage-show": "http-server -p 9400 coverage/lcov-report  -o",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:dev": "env-cmd -f .env.development react-scripts build",
    "build:prod": "env-cmd -f .env.production react-scripts build",
    "build:show": "http-server  build -proxy localhost -p 3000  -o",
    "test": "react-scripts test -u",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint --fix src/**/*.js",
    "format": "prettier --write src/\"**/*.+(js|jsx|json|yml|yaml|css|md)\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix;npm run format;",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test -- --watchAll=false"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/react-hooks": "^3.3.0",
    "@testing-library/user-event": "^7.2.1",
    "antd": "^4.3.5",
    "axios-mock-adapter": "^1.18.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "fetch-mock": "^9.10.2",
    "font-awesome": "^4.7.0",
    "html-react-parser": "^0.13.0",
    "http-server": "^0.12.3",
    "husky": "^4.2.5",
    "prettier": "^2.0.4",
    "react-i18next": "^11.7.0",
    "react-testing-library": "^8.0.1",
    "redux-mock-store": "^1.5.4"
  }
}
